            "https://huijoohwee.github.io/schema/examples/nqds/APISpec",
            "https://huijoohwee.github.io/schema/examples/nqds/DataModel",
            "https://huijoohwee.github.io/schema/examples/nqds/Architecture"
          ]
        }
      ],
      "hasDataFlow": {
        "@type": "nqds:DataFlow",

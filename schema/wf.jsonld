{
  "@context": {
    "@base": "https://huijoohwee.github.io/schema/base.jsonld",
    "@vocab": "https://huijoohwee.github.io/schema/vocab.jsonld",
    "core": "https://huijoohwee.github.io/schema/core.jsonld",
    "uc":   "https://huijoohwee.github.io/schema/uc.jsonld",
    "wf":   "https://huijoohwee.github.io/schema/wf.jsonld",
    "kg":   "https://huijoohwee.github.io/schema/kg.jsonld",
    "xsd": "http://www.w3.org/2001/XMLSchema#",
    "rdf": "http://www.w3.org/1999/02/22-rdf-syntax-ns#",
    "rdfs": "http://www.w3.org/2000/01/rdf-schema#",
    "nquads": "https://www.w3.org/TR/n-quads/#n-quads"
  },

  "@id": "wf:Base:v1.0",
  "@type": "core:Vocabulary",

  "meta": {
    "title": "Workflow Vocabulary (wf)",
    "description": "Neutral baseline vocabulary for describing workflows, orchestration, steps, triggers, and runtime states.",
    "version": "1.0.0",
    "maintainer": "https://github.com/huijoohwee",
    "license": "https://opensource.org/licenses/MIT",
    "created": "2025-09-26",
    "updated": "2025-09-26"
  },

  "classes": {
    "wf:Workflow": {
      "@id": "wf:Workflow",
      "@type": "core:Class",
      "label": "Workflow",
      "description": "A defined sequence of steps or stages to accomplish a goal"
    },
    "wf:Step": {
      "@id": "wf:Step",
      "@type": "core:Class",
      "label": "Step",
      "description": "An individual action, task, or operation within a workflow"
    },
    "wf:Trigger": {
      "@id": "wf:Trigger",
      "@type": "core:Class",
      "label": "Trigger",
      "description": "An event or condition that initiates a workflow or step"
    },
    "wf:Actor": {
      "@id": "wf:Actor",
      "@type": "core:Class",
      "label": "Actor",
      "description": "Agent, service, or user that performs or initiates steps"
    },
    "wf:Condition": {
      "@id": "wf:Condition",
      "@type": "core:Class",
      "label": "Condition",
      "description": "Predicate evaluated to control flow (guards, pre/post conditions)"
    },
    "wf:Transition": {
      "@id": "wf:Transition",
      "@type": "core:Class",
      "label": "Transition",
      "description": "Link between steps indicating order and/or conditional routing"
    },
    "wf:Execution": {
      "@id": "wf:Execution",
      "@type": "core:Class",
      "label": "Execution",
      "description": "A runtime instance of a workflow or step"
    }
  },

  "properties": {
    "wf:hasStep": {
      "@id": "wf:hasStep",
      "@type": "core:Property",
      "label": "hasStep",
      "description": "Ordered reference to steps within a workflow",
      "range": "rdf:List"
    },
    "wf:next": {
      "@id": "wf:next",
      "@type": "core:Property",
      "label": "next",
      "description": "Reference to the next step or steps"
    },
    "wf:triggeredBy": {
      "@id": "wf:triggeredBy",
      "@type": "core:Property",
      "label": "triggeredBy",
      "description": "Event or condition that triggered the workflow or step"
    },
    "wf:actor": {
      "@id": "wf:actor",
      "@type": "core:Property",
      "label": "actor",
      "description": "Actor responsible for the step"
    },
    "wf:condition": {
      "@id": "wf:condition",
      "@type": "core:Property",
      "label": "condition",
      "description": "Guard or predicate controlling transitions"
    },
    "wf:status": {
      "@id": "wf:status",
      "@type": "core:Property",
      "label": "status",
      "description": "Execution state (e.g., pending, running, succeeded, failed)",
      "range": "xsd:string"
    },
    "wf:startTime": {
      "@id": "wf:startTime",
      "@type": "core:Property",
      "label": "startTime",
      "description": "Start timestamp for execution",
      "range": "xsd:dateTime"
    },
    "wf:endTime": {
      "@id": "wf:endTime",
      "@type": "core:Property",
      "label": "endTime",
      "description": "End timestamp for execution",
      "range": "xsd:dateTime"
    },
    "wf:duration": {
      "@id": "wf:duration",
      "@type": "core:Property",
      "label": "duration",
      "description": "Elapsed time for step or execution",
      "range": "xsd:duration"
    },
    "wf:retries": {
      "@id": "wf:retries",
      "@type": "core:Property",
      "label": "retries",
      "description": "Retry policy or count for a step",
      "range": "xsd:integer"
    },
    "wf:dependsOn": {
      "@id": "wf:dependsOn",
      "@type": "core:Property",
      "label": "dependsOn",
      "description": "Dependencies required before the step can execute"
    },
    "wf:outcome": {
      "@id": "wf:outcome",
      "@type": "core:Property",
      "label": "outcome",
      "description": "Result or artifact produced by the step"
    },
    "wf:input": {
      "@id": "wf:input",
      "@type": "core:Property",
      "label": "input",
      "description": "Input references or parameters for the step"
    },
    "wf:output": {
      "@id": "wf:output",
      "@type": "core:Property",
      "label": "output",
      "description": "Output references or artifacts produced by the step"
    }
  },

  "examples": {
    "wf:examplePipeline": {
      "@id": "wf:workflow-patterns/example-pipeline",
      "@type": "wf:Workflow",
      "label": "Example Pipeline",
      "wf:hasStep": [
        {
          "@id": "wf:step-1",
          "@type": "wf:Step",
          "label": "Detect Event",
          "wf:triggeredBy": "uc:event",
          "wf:actor": "uc:actor"
        },
        {
          "@id": "wf:step-2",
          "@type": "wf:Step",
          "label": "Process Data",
          "wf:dependsOn": ["wf:step-1"],
          "wf:actor": "uc:artifact"
        },
        {
          "@id": "wf:step-3",
          "@type": "wf:Step",
          "label": "Generate Report",
          "wf:dependsOn": ["wf:step-2"],
          "wf:actor": "uc:artifact",
          "wf:outcome": "uc:reporting"
        }
      ],
      "wf:version": "1.0.0"
    }
  }
}

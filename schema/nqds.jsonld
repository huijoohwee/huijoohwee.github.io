  "@id": "https://huijoohwee.github.io/schema/nqds.jsonld#SemanticPayloadContext:v1.2",
  "@type": "ContextDefinition",

  "meta": {
    "title": "NQDS Semantic Payload Context",
    "description": "N-Quads-style semantic payload context for relationships, knowledge graphs, journey tracing and data-flow modeling; includes validator guidance and example pointers",
    "version": "1.2.0",
    "maintainer": "https://github.com/huijoohwee",
    "license": "https://opensource.org/licenses/MIT",
    "created": "2025-10-05T00:00:00Z",
    "updated": "2025-10-09T00:00:00Z",
    "layer": "semantic-payload",
    "responsibilities": [
      "agent-relationships",
      "data-flow-transformations",
      "knowledge-graph-construction",
      "semantic-dependencies",
      "journey-tracing",
      "provenance-linking"
    ]
  },

  "@graph": [
    {
      "@id": "nqds:SemanticGraph",
      "@type": "rdfs:Class",
      "rdfs:label": "Semantic Graph",
      "rdfs:comment": "Base class for semantic knowledge graphs and relationship networks"
    },
    {
      "@id": "nqds:Agent",
      "@type": "rdfs:Class",
      "rdfs:label": "Agent",
      "rdfs:comment": "Autonomous entity that performs actions and interacts with other agents"
    },
    {
      "@id": "nqds:Relationship",
      "@type": "rdfs:Class",
      "rdfs:label": "Relationship",
      "rdfs:comment": "Typed connection between entities in the semantic graph"
    },
    {
      "@id": "nqds:DataFlow",
      "@type": "rdfs:Class",
      "rdfs:label": "Data Flow",
      "rdfs:comment": "Movement and transformation of data through components"
    },
    {
      "@id": "nqds:KnowledgeNode",
      "@type": "rdfs:Class",
      "rdfs:label": "Knowledge Node",
      "rdfs:comment": "Node representing a concept, resource, or artifact"
    },
    {
      "@id": "nqds:SemanticEdge",
      "@type": "rdfs:Class",
      "rdfs:label": "Semantic Edge",
      "rdfs:comment": "Edge representing a relationship or inference link"
    },
    {
      "@id": "nqds:Dependency",
      "@type": "rdfs:Class",
      "rdfs:label": "Dependency",
      "rdfs:comment": "Requirement or prerequisite relationship between entities"
    },
    {
      "@id": "nqds:Transformation",
      "@type": "rdfs:Class",
      "rdfs:label": "Transformation",
      "rdfs:comment": "Process that converts data from one form to another"
    },
    {
      "@id": "nqds:Context",
      "@type": "rdfs:Class",
      "rdfs:label": "Context",
      "rdfs:comment": "Contextual metadata that gives meaning to semantic relationships"
    },
    {
      "@id": "nqds:Scope",
      "@type": "rdfs:Class",
      "rdfs:label": "Scope",
      "rdfs:comment": "Boundary or domain within which semantics apply"
    }
  ],

  "properties": [
    {
      "@id": "nqds:analyzes",
      "@type": "rdf:Property",
      "rdfs:label": "analyzes",
      "rdfs:comment": "Indicates that an agent analyzes or examines an entity",
      "rdfs:domain": "nqds:Agent",
      "rdfs:range": "rdfs:Resource"
    },
    {
      "@id": "nqds:produces",
      "@type": "rdf:Property",
      "rdfs:label": "produces",
      "rdfs:comment": "Indicates that an agent produces or generates an output",
      "rdfs:domain": "nqds:Agent",
      "rdfs:range": "rdfs:Resource"
    },
    {
      "@id": "nqds:requires",
      "@type": "rdf:Property",
      "rdfs:label": "requires",
      "rdfs:comment": "Indicates a dependency or requirement relationship",
      "rdfs:domain": "rdfs:Resource",
      "rdfs:range": "rdfs:Resource"
    },
    {
      "@id": "nqds:flowsTo",
      "@type": "rdf:Property",
      "rdfs:label": "flows to",
      "rdfs:comment": "Indicates data flow direction between components",
      "rdfs:domain": "rdfs:Resource",
      "rdfs:range": "rdfs:Resource"
    },
    {
      "@id": "nqds:defines",
      "@type": "rdf:Property",
      "rdfs:label": "defines",
      "rdfs:comment": "Indicates that an entity defines or specifies another",
      "rdfs:domain": "rdfs:Resource",
      "rdfs:range": "rdfs:Resource"
    },
    {
      "@id": "nqds:describes",
      "@type": "rdf:Property",
      "rdfs:label": "describes",
      "rdfs:comment": "Indicates that an entity describes or characterizes another",
      "rdfs:domain": "rdfs:Resource",
      "rdfs:range": "rdfs:Resource"
    },
    {
      "@id": "nqds:specifies",
      "@type": "rdf:Property",
      "rdfs:label": "specifies",
      "rdfs:comment": "Indicates that an entity specifies details or requirements",
      "rdfs:domain": "rdfs:Resource",
      "rdfs:range": "rdfs:Resource"
    },
    {
      "@id": "nqds:implements",
      "@type": "rdf:Property",
      "rdfs:label": "implements",
      "rdfs:comment": "Indicates that an entity implements or realizes another",
      "rdfs:domain": "rdfs:Resource",
      "rdfs:range": "rdfs:Resource"
    },
    {
      "@id": "nqds:validates",
      "@type": "rdf:Property",
      "rdfs:label": "validates",
      "rdfs:comment": "Indicates that an entity validates or verifies another",
      "rdfs:domain": "rdfs:Resource",
      "rdfs:range": "rdfs:Resource"
    },
    {
      "@id": "nqds:returns",
      "@type": "rdf:Property",
      "rdfs:label": "returns",
      "rdfs:comment": "Indicates that an entity returns or provides output",
      "rdfs:domain": "rdfs:Resource",
      "rdfs:range": "rdfs:Resource"
    },
    {
      "@id": "nqds:hasComponent",
      "@type": "rdf:Property",
      "rdfs:label": "has component",
      "rdfs:comment": "Indicates that an entity has a component or part",
      "rdfs:domain": "rdfs:Resource",
      "rdfs:range": "rdfs:Resource"
    },
    {
      "@id": "nqds:hasDependency",
      "@type": "rdf:Property",
      "rdfs:label": "has dependency",
      "rdfs:comment": "Indicates that an entity has a dependency",
      "rdfs:domain": "rdfs:Resource",
      "rdfs:range": "nqds:Dependency"
    },
    {
      "@id": "nqds:hasDataFlow",
      "@type": "rdf:Property",
      "rdfs:label": "has data flow",
      "rdfs:comment": "Indicates that an entity has an associated data flow",
      "rdfs:domain": "rdfs:Resource",
      "rdfs:range": "nqds:DataFlow"
    },
    {
      "@id": "nqds:traceId",
      "@type": "rdf:Property",
      "rdfs:label": "trace id",
      "rdfs:comment": "Trace identifier linking NQDS nodes to JDBL directives or runtime traces",
      "rdfs:domain": "rdfs:Resource",
      "rdfs:range": "xsd:string"
    },
    {
      "@id": "nqds:provenance",
      "@type": "rdf:Property",
      "rdfs:label": "provenance",
      "rdfs:comment": "Provenance pointer for graph construction (activity/agent)",
      "rdfs:domain": "nqds:SemanticGraph",
      "rdfs:range": "@id"
    }
  ],

  "validatorHints": {
    "graphIntegrity": "Check node uniqueness, typed edges, acyclicity where required, and traceId linkage to JDBL directives",
    "flowCompleteness": "Ensure flows (flowsTo lists) are complete and terminal nodes identified; validate that transforms reference Transformation nodes",
    "provenance": "Verify provenance pointers resolve to known agents or activities and include timestamps",
    "recommendedTools": [
      "nqds-parser",
      "graph-validator",
      "nqds-journey-analyzer",
      "rdf-validate",
      "directive-trace-validator"
    ]
  },

  "examples": [

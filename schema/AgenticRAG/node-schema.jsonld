{
  "@context": "https://huijoohwee.github.io/schema/AgenticRAG/v1/context.jsonld",
  "@id": "kg:Node",
  "@type": "rdfs:Class",
  
  "rdfs:label": [
    {"@value": "Knowledge Graph Node", "@language": "en-us"},
    {"@value": "知识图谱节点", "@language": "zh-cn"}
  ],
  
  "rdfs:comment": [
    {
      "@value": "Generic graph node structure - domain-agnostic, supports RAG, embeddings, geospatial, and multimedia. Rendering may annotate nodes with visual:layer / visual:community. GraphRAG pipelines may annotate nodes with graphrag:role (Subject/Object/Entity).",
      "@language": "en-us"
    },
    {
      "@value": "通用图节点结构 - 领域无关，支持RAG、嵌入、地理空间和多媒体。渲染层可用 visual:layer / visual:community 标注分层/社区。GraphRAG 流水线可用 graphrag:role（Subject/Object/Entity）标注节点角色。",
      "@language": "zh-cn"
    }
  ],
  
  "schemaVersion": "1.0.0",
  
  "required": ["@id", "labels"],
  
  "propertyDefinitions": {
    "@id": {
      "@type": "xsd:string",
      "rdfs:label": [
        {"@value": "Node Identifier", "@language": "en-us"},
        {"@value": "节点标识符", "@language": "zh-cn"}
      ],
      "rdfs:comment": [
        {"@value": "Unique identifier for the node (required)", "@language": "en-us"},
        {"@value": "节点的唯一标识符（必需）", "@language": "zh-cn"}
      ],
      "required": true
    },
    
    "labels": {
      "@container": "@list",
      "@type": "xsd:string",
      "rdfs:label": [
        {"@value": "Type Labels", "@language": "en-us"},
        {"@value": "类型标签", "@language": "zh-cn"}
      ],
      "rdfs:comment": [
        {"@value": "Array of opaque type labels - Parser/Validator treat as strings (required, min: 1)", "@language": "en-us"},
        {"@value": "不透明类型标签数组 - 解析器/验证器视为字符串（必需，最少：1）", "@language": "zh-cn"}
      ],
      "required": true,
      "minItems": 1
    },
    
    "name": {
      "@container": "@list",
      "@type": "xsd:string",
      "rdfs:label": [
        {"@value": "Node Names and Synonyms", "@language": "en-us"},
        {"@value": "节点名称和同义词", "@language": "zh-cn"}
      ],
      "rdfs:comment": [
        {"@value": "Optional list of human-readable labels clustered for this node. May include the preferred term and alternative labels used for synonym-aware retrieval and UI display.", "@language": "en-us"},
        {"@value": "此节点的可选可读标签列表。可以包含首选术语和用于同义词检索与界面展示的备用标签。", "@language": "zh-cn"}
      ],
      "required": false,
      "useCase": "synonym_clustering"
    },
    
    "properties": {
      "@type": "@json",
      "rdfs:label": [
        {"@value": "Custom Properties", "@language": "en-us"},
        {"@value": "自定义属性", "@language": "zh-cn"}
      ],
      "rdfs:comment": [
        {"@value": "Domain-specific key-value pairs - Schema does NOT validate content", "@language": "en-us"},
        {"@value": "特定领域的键值对 - 模式不验证内容", "@language": "zh-cn"}
      ],
      "required": false,
      "suggestedFields": [
        "graphrag:role",
        "keyword:frequency",
        "visual:importance",
        "visual:nodeSize",
        "visual:community",
        "visual:layer",
        "kg:groupId",
        "kg:groupMemberCount",
        "kg:collapsed"
      ]
    },
    
    "chunk_text": {
      "@type": "xsd:string",
      "rdfs:label": [
        {"@value": "RAG Text Content", "@language": "en-us"},
        {"@value": "RAG文本内容", "@language": "zh-cn"}
      ],
      "rdfs:comment": [
        {"@value": "Text content for semantic retrieval and agent grounding", "@language": "en-us"},
        {"@value": "用于语义检索和智能体基础的文本内容", "@language": "zh-cn"}
      ],
      "required": false,
      "useCase": "agentic_rag"
    },
    
    "embedding": {
      "@container": "@list",
      "@type": "xsd:double",
      "rdfs:label": [
        {"@value": "Vector Embedding", "@language": "en-us"},
        {"@value": "向量嵌入", "@language": "zh-cn"}
      ],
      "rdfs:comment": [
        {"@value": "Dense vector for similarity search - Generated from chunk_text", "@language": "en-us"},
        {"@value": "用于相似性搜索的密集向量 - 从chunk_text生成", "@language": "zh-cn"}
      ],
      "required": false,
      "useCase": "agentic_rag"
    },

    "centrality": {
      "@type": "xsd:double",
      "rdfs:label": [
        {"@value": "Centrality Score", "@language": "en-us"},
        {"@value": "中心性分数", "@language": "zh-cn"}
      ],
      "rdfs:comment": [
        {"@value": "Graph centrality score (e.g. PageRank) - Indicates node importance", "@language": "en-us"},
        {"@value": "图中心性分数（例如PageRank）- 指示节点重要性", "@language": "zh-cn"}
      ],
      "required": false
    },

    "centrality:betweenness": {
      "@type": "xsd:double",
      "rdfs:label": [
        {"@value": "Betweenness Centrality", "@language": "en-us"},
        {"@value": "介数中心性", "@language": "zh-cn"}
      ],
      "rdfs:comment": [
        {"@value": "Number of shortest paths passing through node - Indicates bridge role", "@language": "en-us"},
        {"@value": "经过节点的最短路径数量 - 指示桥梁角色", "@language": "zh-cn"}
      ],
      "required": false
    },

    "centrality:closeness": {
      "@type": "xsd:double",
      "rdfs:label": [
        {"@value": "Closeness Centrality", "@language": "en-us"},
        {"@value": "紧密中心性", "@language": "zh-cn"}
      ],
      "rdfs:comment": [
        {"@value": "Inverse sum of shortest paths to all other nodes - Indicates efficient spread", "@language": "en-us"},
        {"@value": "到所有其他节点的最短路径之和的倒数 - 指示有效传播", "@language": "zh-cn"}
      ],
      "required": false
    },

    "centrality:hubs": {
      "@type": "xsd:double",
      "rdfs:label": [
        {"@value": "Hub Score", "@language": "en-us"},
        {"@value": "枢纽分数", "@language": "zh-cn"}
      ],
      "rdfs:comment": [
        {"@value": "HITS Hub score - Points to good authorities", "@language": "en-us"},
        {"@value": "HITS枢纽分数 - 指向好的权威", "@language": "zh-cn"}
      ],
      "required": false
    },

    "centrality:authorities": {
      "@type": "xsd:double",
      "rdfs:label": [
        {"@value": "Authority Score", "@language": "en-us"},
        {"@value": "权威分数", "@language": "zh-cn"}
      ],
      "rdfs:comment": [
        {"@value": "HITS Authority score - Pointed to by good hubs", "@language": "en-us"},
        {"@value": "HITS权威分数 - 由好的枢纽指向", "@language": "zh-cn"}
      ],
      "required": false
    },

    "provenance": {
      "@container": "@set",
      "@type": "@id",
      "rdfs:label": [
        { "@value": "Provenance Links", "@language": "en-us" },
        { "@value": "溯源链接", "@language": "zh-cn" }
      ],
      "rdfs:comment": [
        {
          "@value": "Links to source structures (documents, blocks, tokens) this node was derived from.",
          "@language": "en-us"
        },
        {
          "@value": "指向该节点来源的结构（文档、块、词元）的链接。",
          "@language": "zh-cn"
        }
      ],
      "required": false,
      "useCase": "provenance_tracking"
    },

    "documentPath": {
      "@type": "xsd:string",
      "required": false,
      "useCase": "provenance_tracking"
    },

    "documentUrl": {
      "@type": "@id",
      "required": false,
      "useCase": "provenance_tracking"
    },

    "lineStart": {
      "@type": "xsd:integer",
      "required": false,
      "useCase": "provenance_tracking"
    },

    "lineEnd": {
      "@type": "xsd:integer",
      "required": false,
      "useCase": "provenance_tracking"
    },

    "blockType": {
      "@type": "xsd:string",
      "required": false,
      "useCase": "provenance_tracking"
    },

    "tokenStart": {
      "@type": "xsd:integer",
      "required": false,
      "useCase": "provenance_tracking"
    },

    "tokenEnd": {
      "@type": "xsd:integer",
      "required": false,
      "useCase": "provenance_tracking"
    },
    
    "geo": {
      "@type": "@json",
      "rdfs:label": [
        {"@value": "Geospatial Coordinates", "@language": "en-us"},
        {"@value": "地理空间坐标", "@language": "zh-cn"}
      ],
      "rdfs:comment": [
        {"@value": "Geographic location {lat: float, lng: float} for spatial reasoning", "@language": "en-us"},
        {"@value": "地理位置 {lat: float, lng: float} 用于空间推理", "@language": "zh-cn"}
      ],
      "required": false,
      "useCase": "spatial_reasoning"
    },
    
    "media_url": {
      "@type": "@id",
      "rdfs:label": [
        {"@value": "Media Resource URL", "@language": "en-us"},
        {"@value": "媒体资源网址", "@language": "zh-cn"}
      ],
      "rdfs:comment": [
        {"@value": "URL to external media (image, video, document) - Agent can inject inline", "@language": "en-us"},
        {"@value": "外部媒体（图像、视频、文档）网址 - 智能体可内联注入", "@language": "zh-cn"}
      ],
      "required": false,
      "useCase": "multimodal"
    },
    
    "skos:prefLabel": {
      "@type": "xsd:string",
      "rdfs:label": [
        {"@value": "Preferred Label", "@language": "en-us"},
        {"@value": "首选标签", "@language": "zh-cn"}
      ],
      "rdfs:comment": [
        {"@value": "Preferred human-readable label for this node when using SKOS-style synonym clustering.", "@language": "en-us"},
        {"@value": "在使用 SKOS 风格同义词聚类时，此节点的首选可读标签。", "@language": "zh-cn"}
      ],
      "required": false,
      "useCase": "synonym_clustering"
    },
    
    "skos:altLabel": {
      "@container": "@list",
      "@type": "xsd:string",
      "rdfs:label": [
        {"@value": "Alternative Labels", "@language": "en-us"},
        {"@value": "备用标签", "@language": "zh-cn"}
      ],
      "rdfs:comment": [
        {"@value": "Synonyms, variants, or alternative labels associated with this node for internal synonym expansion.", "@language": "en-us"},
        {"@value": "与此节点关联的同义词、变体或备用标签，用于内部同义词扩展。", "@language": "zh-cn"}
      ],
      "required": false,
      "useCase": "synonym_clustering"
    },
    
    "schema:sameAs": {
      "@container": "@set",
      "@type": "@id",
      "rdfs:label": [
        {"@value": "External Equivalents", "@language": "en-us"},
        {"@value": "外部等价项", "@language": "zh-cn"}
      ],
      "rdfs:comment": [
        {"@value": "External identifiers or URIs that represent the same concept in other vocabularies or systems.", "@language": "en-us"},
        {"@value": "在其他词汇表或系统中表示同一概念的外部标识符或 URI。", "@language": "zh-cn"}
      ],
      "required": false,
      "useCase": "synonym_clustering"
    },
    
    "metadata": {
      "@type": "@json",
      "rdfs:label": [
        {"@value": "Contextual Metadata", "@language": "en-us"},
        {"@value": "上下文元数据", "@language": "zh-cn"}
      ],
      "rdfs:comment": [
        {
          "@value": "Provenance, confidence, timestamps, and optional codebase paths (for example metadata.codebasePath) used for agent self-correction and traceability.",
          "@language": "en-us"
        },
        {
          "@value": "来源、置信度、时间戳以及可选的代码库路径（例如 metadata.codebasePath），用于智能体自我修正和可追溯性。",
          "@language": "zh-cn"
        }
      ],
      "required": false,
      "suggestedFields": ["source", "confidence", "timestamp", "curator", "codebasePath", "documentPath", "documentUrl", "lineStart", "lineEnd", "blockType", "tokenStart", "tokenEnd"],
      "useCase": "provenance_tracking"
    },
    
    "flow:kind": {
      "@type": "xsd:string",
      "rdfs:label": [
        {"@value": "Flow Node Kind", "@language": "en-us"},
        {"@value": "流节点类型", "@language": "zh-cn"}
      ],
      "rdfs:comment": [
        {
          "@value": "Optional flow role for computing over the graph (for example: input, compute, aggregate).",
          "@language": "en-us"
        },
        {
          "@value": "用于在图上进行计算的可选流角色（例如：input、compute、aggregate）。",
          "@language": "zh-cn"
        }
      ],
      "required": false,
      "useCase": "agentic_flow"
    },
    
    "flow:value": {
      "@type": "xsd:float",
      "rdfs:label": [
        {"@value": "Flow Numeric Value", "@language": "en-us"},
        {"@value": "流数值", "@language": "zh-cn"}
      ],
      "rdfs:comment": [
        {
          "@value": "Numeric flow value used by a computing flow engine.",
          "@language": "en-us"
        },
        {
          "@value": "由计算流引擎使用的数值。",
          "@language": "zh-cn"
        }
      ],
      "required": false,
      "useCase": "agentic_flow",
      "validationRule": "must_be_numeric"
    },
    
    "flow:op": {
      "@type": "xsd:string",
      "rdfs:label": [
        {"@value": "Flow Operation", "@language": "en-us"},
        {"@value": "流运算", "@language": "zh-cn"}
      ],
      "rdfs:comment": [
        {
          "@value": "Optional aggregation or transformation applied when computing this node's flow value (for example: sum, avg, min, max).",
          "@language": "en-us"
        },
        {
          "@value": "在计算此节点流数值时应用的可选聚合或变换（例如：sum、avg、min、max）。",
          "@language": "zh-cn"
        }
      ],
      "required": false,
      "useCase": "agentic_flow"
    }
  },
  
  "validationRules": {
    "structural_only": true,
    "no_domain_semantics": true,
    "treat_properties_as_opaque": true,
    "treat_labels_as_strings": true
  },
  
  "agenticUseCases": [
    "semantic_retrieval",
    "multi_hop_reasoning",
    "self_correction",
    "provenance_tracking",
    "spatial_reasoning",
    "multimodal_grounding"
  ]
}

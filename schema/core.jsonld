{
  "@context": [
    "https://huijoohwee.github.io/schema/base.jsonld",
    {
      "core": "https://huijoohwee.github.io/schema/core.jsonld#",
      
      "ContextDefinition": "core:ContextDefinition",
      "Vocabulary": "rdfs:Class",
      "Concept": "skos:Concept", 
      "Property": "rdf:Property",
      "Class": "rdfs:Class",
      "Directive": "core:Directive",
      
      "domain": { "@id": "rdfs:domain", "@type": "@id" },
      "range": { "@id": "rdfs:range", "@type": "@id" },
      "subClassOf": { "@id": "rdfs:subClassOf", "@type": "@id" },
      "subPropertyOf": { "@id": "rdfs:subPropertyOf", "@type": "@id" },
      
      "terms": { "@id": "core:hasTerm", "@container": "@index" },
      "types": { "@id": "core:hasType", "@container": "@index" },
      "examples": { "@id": "core:examples", "@container": "@list" }
    }
  ],

  "@id": "https://huijoohwee.github.io/schema/core.jsonld",
  "@type": ["owl:Ontology", "schema:Dataset"],

  "meta": {
    "@type": "schema:Dataset",
    "title": "Core Vocabulary Ontology",
    "description": "Foundational RDF vocabulary providing baseline classes and properties for cross-project semantic alignment",
    "creator": "https://huijoohwee.github.io",
    "license": "https://opensource.org/licenses/MIT",
    "conformsTo": [
      "https://www.w3.org/TR/rdf11-concepts/",
      "https://www.w3.org/TR/owl2-overview/",
      "https://www.w3.org/2004/02/skos/"
    ],
    "versionInfo": "1.1.0",
    "created": "2024-01-01T00:00:00Z",
    "modified": "2024-12-19T00:00:00Z",
    "maintainer": "https://huijoohwee.github.io"
  },

  "@graph": [
    {
      "@id": "core:id",
      "@type": "rdf:Property",
      "label": "identifier",
      "description": "Canonical identifier (IRI) for an entity",
      "domain": "owl:Thing",
      "range": "xsd:anyURI"
    },
    {
      "@id": "core:type",
      "@type": "rdf:Property",
      "label": "type",
      "description": "Primary type or classification of an entity",
      "domain": "owl:Thing",
      "range": "rdfs:Class"
    },
    {
      "@id": "core:label",
      "@type": "rdf:Property",
      "label": "label",
      "description": "Human-readable short name",
      "domain": "owl:Thing",
      "range": "xsd:string"
    },
    {
      "@id": "core:description",
      "@type": "rdf:Property",
      "label": "description", 
      "description": "Long-form textual description",
      "domain": "owl:Thing",
      "range": "xsd:string"
    },
    {
      "@id": "core:status",
      "@type": "rdf:Property",
      "label": "status",
      "description": "Lifecycle or operational state (e.g., draft, active, deprecated)",
      "domain": "owl:Thing",
      "range": "xsd:string"
    },
    {
      "@id": "core:created",
      "@type": "rdf:Property",
      "label": "created",
      "description": "Creation timestamp",
      "domain": "owl:Thing",
      "range": "xsd:dateTime"
    },
    {
      "@id": "core:modified",
      "@type": "rdf:Property",
      "label": "modified",
      "description": "Last modified timestamp",
      "domain": "owl:Thing",
      "range": "xsd:dateTime"
    },
    {
      "@id": "core:author",
      "@type": "rdf:Property",
      "label": "author",
      "description": "Agent or organization responsible for the entity",
      "domain": "owl:Thing",
      "range": "foaf:Agent"
    },
    {
      "@id": "core:maintainer",
      "@type": "rdf:Property",
      "label": "maintainer",
      "description": "Primary maintainer or steward URI",
      "domain": "owl:Thing",
      "range": "foaf:Agent"
    },
    {
      "@id": "core:version",
      "@type": "rdf:Property",
      "label": "version",
      "description": "Semantic version string",
      "domain": "owl:Thing",
      "range": "xsd:string"
    },
    {
      "@id": "core:license",
      "@type": "rdf:Property",
      "label": "license",
      "description": "License IRI",
      "domain": "owl:Thing",
      "range": "xsd:anyURI"
    },
    {
      "@id": "core:extends",
      "@type": "rdf:Property",
      "label": "extends",
      "description": "Reference to a parent or base vocabulary/context",
      "domain": "owl:Thing",
      "range": "owl:Thing"
    },
    {
      "@id": "core:example",
      "@type": "rdf:Property",
      "label": "example",
      "description": "Usage example or snippet",
      "domain": "owl:Thing",
      "range": "xsd:string"
    },
    {
      "@id": "core:Vocabulary",
      "@type": "rdfs:Class",
      "label": "Vocabulary",
      "description": "A named collection of term definitions and metadata",
      "subClassOf": "owl:Thing"
    },
    {
      "@id": "core:Concept",
      "@type": "rdfs:Class",
      "label": "Concept",
      "description": "Reusable semantic building block (domain-agnostic)",
      "subClassOf": "skos:Concept"
    },
    {
      "@id": "core:Property",
      "@type": "rdfs:Class",
      "label": "Property",
      "description": "Predicate or attribute definition",
      "subClassOf": "rdf:Property"
    },
    {
      "@id": "core:Class",
      "@type": "rdfs:Class",
      "label": "Class",
      "description": "Entity class or type definition",
      "subClassOf": "rdfs:Class"
    },
    {
      "@id": "core:Directive",
      "@type": "rdfs:Class",
      "label": "Directive",
      "description": "Operational directive or instruction set",
      "subClassOf": "owl:Thing"
    },
    {
      "@id": "core:ContextDefinition",
      "@type": "rdfs:Class",
      "label": "Context Definition",
      "description": "JSON-LD context definition providing semantic mappings",
      "subClassOf": "owl:Thing"
    }
  ]
}
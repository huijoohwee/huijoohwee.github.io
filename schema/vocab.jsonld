{
  "@context": [
    "https://huijoohwee.github.io/schema/base.jsonld",
    {
      "vocab": "https://huijoohwee.github.io/schema/vocab.jsonld#",
      
      "Vocabulary": "rdfs:Class",
      "Concept": "skos:Concept",
      "Property": "rdf:Property",
      "Class": "rdfs:Class",
      
      "domain": { "@id": "rdfs:domain", "@type": "@id" },
      "range": { "@id": "rdfs:range", "@type": "@id" },
      "subClassOf": { "@id": "rdfs:subClassOf", "@type": "@id" },
      "subPropertyOf": { "@id": "rdfs:subPropertyOf", "@type": "@id" },
      "seeAlso": { "@id": "rdfs:seeAlso", "@type": "@id" },
      "isDefinedBy": { "@id": "rdfs:isDefinedBy", "@type": "@id" },
      
      "terms": { "@id": "vocab:terms", "@container": "@index" },
      "universalConcepts": { "@id": "vocab:universalConcepts", "@container": "@index" },
      "examples": { "@id": "vocab:examples", "@container": "@list" },
      "classes": { "@id": "vocab:classes", "@container": "@index" },
      "properties": { "@id": "vocab:properties", "@container": "@index" }
    }
  ],

  "@id": "https://huijoohwee.github.io/schema/vocab.jsonld",
  "@type": ["owl:Ontology", "schema:Dataset"],

  "meta": {
    "@type": "schema:Dataset",
    "title": "Universal Vocabulary Ontology",
    "description": "RDF-compliant vocabulary providing standardized classes and properties for JJNHM semantic architecture",
    "creator": "https://huijoohwee.github.io",
    "license": "https://opensource.org/licenses/MIT",
    "conformsTo": [
      "https://www.w3.org/TR/rdf11-concepts/",
      "https://www.w3.org/TR/owl2-overview/",
      "https://www.w3.org/2004/02/skos/"
    ],
    "versionInfo": "1.1.0",
    "created": "2024-01-01T00:00:00Z",
    "modified": "2024-12-19T00:00:00Z",
    "maintainer": "https://huijoohwee.github.io"
  },

  "classes": {
    "Entity": {
      "@id": "vocab:Entity",
      "@type": "rdfs:Class",
      "label": "Entity",
      "description": "Base class for all identifiable entities in the JJNHM architecture",
      "subClassOf": "owl:Thing"
    },
    "Directive": {
      "@id": "vocab:Directive", 
      "@type": "rdfs:Class",
      "label": "Directive",
      "description": "Executable instruction or command within JDBL layer",
      "subClassOf": "vocab:Entity"
    },
    "Agent": {
      "@id": "vocab:Agent",
      "@type": "rdfs:Class", 
      "label": "Agent",
      "description": "Autonomous entity capable of performing actions",
      "subClassOf": "vocab:Entity"
    },
    "Workflow": {
      "@id": "vocab:Workflow",
      "@type": "rdfs:Class",
      "label": "Workflow", 
      "description": "Structured sequence of steps or processes",
      "subClassOf": "vocab:Entity"
    }
  },

  "properties": {
    "hasId": {
      "@id": "vocab:hasId",
      "@type": "rdf:Property",
      "label": "has identifier",
      "description": "Associates an entity with its unique identifier",
      "domain": "vocab:Entity",
      "range": "xsd:anyURI"
    },
    "hasLabel": {
      "@id": "vocab:hasLabel", 
      "@type": "rdf:Property",
      "label": "has label",
      "description": "Associates an entity with a human-readable label",
      "domain": "vocab:Entity",
      "range": "xsd:string"
    },
    "hasDescription": {
      "@id": "vocab:hasDescription",
      "@type": "rdf:Property", 
      "label": "has description",
      "description": "Associates an entity with descriptive text",
      "domain": "vocab:Entity",
      "range": "xsd:string"
    },
    "hasStatus": {
      "@id": "vocab:hasStatus",
      "@type": "rdf:Property",
      "label": "has status", 
      "description": "Associates an entity with its current status",
      "domain": "vocab:Entity",
      "range": "xsd:string"
    }
  },

  "terms": {
    "id": {
      "@id": "core:id",
      "label": "Identifier",
      "description": "Canonical IRI or CURIE used as primary identifier for an entity"
    },
    "type": {
      "@id": "core:type",
      "label": "Type",
      "description": "Primary type or classification (use core:Class or JSON-LD @type)"
    },
    "label": {
      "@id": "core:label",
      "label": "Label",
      "description": "Human-readable short name"
    },
    "description": {
      "@id": "core:description",
      "label": "Description",
      "description": "Long-form documentation or summary"
    },
    "status": {
      "@id": "uc:status",
      "label": "Status",
      "description": "Lifecycle or operational state (draft, active, deprecated)"
    },
    "created": {
      "@id": "core:created",
      "label": "Created",
      "description": "Creation timestamp"
    },
    "modified": {
      "@id": "core:modified",
      "label": "Modified",
      "description": "Last modified timestamp"
    },
    "maintainer": {
      "@id": "core:maintainer",
      "label": "Maintainer",
      "description": "Primary steward or owner URI"
    },
    "version": {
      "@id": "core:version",
      "label": "Version",
      "description": "Semantic version identifier"
    },
    "license": {
      "@id": "core:license",
      "label": "License",
      "description": "License IRI for the artifact"
    },
    "usesType": {
      "@id": "vocab:usesType",
      "label": "Uses Type",
      "description": "Convenience property to declare expected JSON-LD types in templates or payloads"
    }
  },

  "universalConcepts": {
    "automation": {
      "@id": "uc:automation",
      "label": "Automation",
      "description": "Automated execution of steps, workflows, or agents"
    },
    "processing": {
      "@id": "uc:processing",
      "label": "Processing",
      "description": "Data transformation, enrichment, validation or analysis"
    },
    "reporting": {
      "@id": "uc:reporting",
      "label": "Reporting",
      "description": "Generation of structured outputs, summaries or documentation"
    },
    "actor": {
      "@id": "uc:actor",
      "label": "Actor",
      "description": "Agent, user, or service performing actions"
    },
    "artifact": {
      "@id": "uc:artifact",
      "label": "Artifact",
      "description": "Produced resource such as a file, document, or endpoint"
    },
    "trace": {
      "@id": "uc:trace",
      "label": "Trace",
      "description": "Trace identifier used for linking runtime traces and provenance across layers"
    },
    "kpi": {
      "@id": "uc:kpi",
      "label": "KPI",
      "description": "Key performance indicator used to gate validations and measure outcomes"
    }
  },

  "examples": [
    {
      "id": "https://example.org/artifact/1",
      "type": "https://huijoohwee.github.io/schema/jdbl.jsonld#ExecutionDirective",
      "label": "Sample Directive",
      "description": "Example using vocab CURIEs and uc concepts",
      "status": "uc:status",
      "created": "2025-01-01T00:00:00Z",
      "maintainer": "https://github.com/your-org"
    }
  ]
}